<live-query-input-text>
    {/* autocomplete="off" resets the value on page refresh */}
    <input type="text" autocomplete="off" class="border rounded-sm border-gray-300 dark:border-gray-600" {...Astro.props} />
</live-query-input-text>

<script>
    import { LiveQueryInput } from "./live-query.js";

    class Text extends LiveQueryInput {
        constructor() {
            super();
            let text = this.querySelector('input[type="text"]');
            text.addEventListener("input", () => {
                this.set(text.value);
            });
            this.name = text.name;
            setTimeout(() => {
                this.parent.update(this.name, text.value);
            }, 0);
        }

        set(value) {
            this.parent.update(this.name, value);
            return value;
        }
    }

    customElements.define('live-query-input-text', Text);
</script>
