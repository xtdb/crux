<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>
  <root level="WARN">
    <appender-ref ref="STDOUT" />
  </root>
  <logger name="xtdb" level="INFO" />
  <logger name="xtdb.node" level="WARN" />
  <logger name="xtdb.hash" level="WARN" />
  <logger name="xtdb.http-server" level="WARN" />
  <logger name="xtdb.kafka" level="WARN" />
  <logger name="xtdb.jdbc" level="WARN" />
  <logger name="xtdb.mem-kv" level="ERROR" />
  <logger name="xtdb.rdf" level="ERROR" />
  <logger name="xtdb.tx" level="ERROR" />

  <logger name="org.apache.kafka" level="ERROR" />
  <logger name="org.apache.zookeeper" level="ERROR" />
  <logger name="kafka" level="ERROR" />
</configuration>
